#!/bin/bash
echo -e "## {{ansible_nodename}} Folders\n" > /var/www/{{ansible_nodename}}/web/usage.txt
du -hd1 /var/www/ | sort -h -r | while read space user ; do echo -e " * $space $user\n"; done >> /var/www/{{ansible_nodename}}/web/usage.txt
du -hd1 /var/build/ | sort -h -r | while read space user ; do echo -e " * $space $user\n"; done >> /var/www/{{ansible_nodename}}/web/usage.txt
echo -e "## {{ansible_nodename}} Space\n<file>\n" >> /var/www/{{ansible_nodename}}/web/usage.txt
df -Ph / | column -t >> /var/www/{{ansible_nodename}}/web/usage.txt
echo -e "</file>\n" >> /var/www/{{ansible_nodename}}/web/usage.txt
echo -e "## {{ansible_nodename}} Database folders\n\n" >> /var/www/{{ansible_nodename}}/web/usage.txt
du -hd1 /var/lib/mysql/ | sort -h -r | while read space user ; do echo -e " * $space $user\n"; done >> /var/www/{{ansible_nodename}}/web/usage.txt
echo -e "\n" >> /var/www/{{ansible_nodename}}/web/usage.txt
chown root:www-data /var/www/{{ansible_nodename}}/web/usage.txt
chmod 755 /var/www/{{ansible_nodename}}/web/usage.txt